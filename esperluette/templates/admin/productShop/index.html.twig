{% extends 'admin/base.html.twig' %}

{% block title %} Admnistration des produits {% endblock %}

{% block body %}
<h1> Gestion des produits </h1>

<table class="responsive-table striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Titre</th>
            <th>Prix</th>
            <th>Introduction</th>
            <th>Contenu</th>
            <th>Images</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{product.id}}</td>
            <td>{{product.title}}</td>
            <td>{{product.price}}</td>
            <td>{{product.introduction}}</td>
            <td>{{product.content}}</td>
            <td>{{product.coverImage}}</td>
            <td>
                <a href="" class="btn"> <i class="fas fa-edit"> </i></a>
                <a href="" class="btn"> <i class="fas fa-trash"> </i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
